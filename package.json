{
  "name": "storeon",
  "version": "0.8.7",
  "description": "Tiny (173 bytes) event-based Redux-like state manager for React and Preact",
  "keywords": [
    "state",
    "immutable",
    "react",
    "preact",
    "hook"
  ],
  "scripts": {
    "clean": "rimraf api.md coverage/",
    "api": "documentation build *.js react/*.js -f md -o api.md",
    "spell": "yarn api && yaspeller *.md",
    "lint": "eslint *.js test/*.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spell",
    "start": "parcel serve --cache-dir test/demo/.cache -d test/demo/dist test/demo/index.html --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "storeon/storeon",
  "browser": {
    "./devtools/logger.js": "./devtools/logger.browser.js"
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.2.3",
    "@types/react": "^16.8.20",
    "clean-publish": "^1.1.2",
    "documentation": "^11.0.1",
    "eslint": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-import-helpers": "^1.0.1",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.5.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "nanodelay": "^0.1.4",
    "parcel-bundler": "^1.12.3",
    "preact": "^10.0.0-alpha.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "size-limit": "^1.3.7",
    "typescript": "^3.5.2",
    "yaspeller": "^5.1.0"
  },
  "size-limit": [
    {
      "name": "core",
      "path": "index.js",
      "limit": "173 B"
    },
    {
      "name": "core + react hook",
      "path": [
        "index.js",
        "react/index.js"
      ],
      "limit": "350 B",
      "ignore": [
        "react"
      ]
    },
    {
      "name": "core + react decorator",
      "path": [
        "index.js",
        "react/connect.js"
      ],
      "limit": "408 B",
      "ignore": [
        "react"
      ]
    },
    {
      "name": "devtools",
      "path": [
        "devtools/index.browser.js",
        "devtools/logger.browser.js"
      ],
      "limit": "178 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser",
    "rules": {
      "node/no-unpublished-require": "off",
      "es5/no-es6-static-methods": "off",
      "node/no-missing-require": "off",
      "func-style": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "createStore",
      "moduleInitializer",
      "Preact",
      "Redux",
      "gzipped",
      "Storeon A",
      "Reduxâ€™s",
      "async",
      "StoreContext",
      "Storeon",
      "DevTools",
      "useStoreon",
      "polyfill",
      "UIBook",
      "UI"
    ]
  }
}
